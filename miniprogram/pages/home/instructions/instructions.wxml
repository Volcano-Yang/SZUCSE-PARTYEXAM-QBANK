        </view>

        <view class='view2-left-each' bindtap='changeSelectIndex4'>
          <text class='view2-left-each-text'>预备党员</text>
        </view>

      </view>

      <view class='view2-right'>


        <navigator url='../eachgroup/eachgroup?id=11'>
          <view class='view2-right-each'>
            <text>2017年\n考试真题</text>
          </view>
        </navigator>


        <navigator url='../eachgroup/eachgroup?id=12'>
          <view class='view2-right-each'>
            <text>2018年\n考试真题</text>
          </view>
        </navigator>

      </view>

    </view>

